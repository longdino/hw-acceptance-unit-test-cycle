<h2>Search Results of Similar Movies with Director</h2>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th>
        <%= link_to "Movie Title", movies_path(:order => "title", :ratings => @ratings_to_show), :class => @title_header, :id => "title_header" %>
      </th>
      <th>Rating</th>
      <th>
        <%= link_to "Release Date", movies_path(:order => "release_date", :ratings => @ratings_to_show), :class => @release_date_header, :id => "release_date_header" %>
      </th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
        <td>
            <%= movie.director %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back to Movie List', movies_path, :class => 'btn btn-secondary' %>
